<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/tvCheckNotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_notification_permission"
        android:textSize="20sp"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground"/>
    <TextView
        android:id="@+id/tvCheckSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_filesystem_permission"
        android:textSize="20sp"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground"
        />
    <TextView
        android:id="@+id/tvCheckOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_overlay_permission"
        android:textSize="20sp"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground"
        />

</LinearLayout>